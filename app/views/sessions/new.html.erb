<div class="login-card">
  <%= form_for :login do |f| %>
    <div>
      <%= f.text_field :email, autofocus: true, placeholder: "Email" %>
    </div>
    <div>
      <%= f.password_field :password, placeholder: "Password" %>
    </div>
    <div>
      <%= f.submit "Log In", class: "login-button" %>
    </div>
  <% end %>
</div>