<nav class="navbar">
  <span class="navbar-toggle" id="js-navbar-toggle">
    <i class="fas fa-bars"></i>
  </span>
  <a href="#" class="logo">RL</a>
  <ul class="main-nav" id="js-menu">
    <li>
      <%= link_to 'Job Board', jobs_path, class: 'nav-links' %>
    </li>
    <% if current_user %>
      <li>
        <%= link_to 'View Profile', user_path(current_user), class: 'nav-links' %>
      </li>
      <li>
        <%= link_to 'Logout', logout_path, method: 'delete', class: 'nav-links' %>
      </li>
    <% else %>
      <li>
        <%= link_to 'Login', login_path, class: 'nav-links' %>
      </li>
      <li>
        <%= link_to 'Register', new_user_path, class: 'nav-links' %>
      </li>
    <% end %>
  </ul>
</nav>

<script>
let mainNav = document.getElementById('js-menu');
let navBarToggle = document.getElementById('js-navbar-toggle');
navBarToggle.addEventListener('click', function () {
  mainNav.classList.toggle('active');
});
</script>